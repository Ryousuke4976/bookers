<h1>Editing Book</h1>
<%= form_for(@booker) do |f| %>
<% if @booker.errors.any? %>
    <ul>
      <% @booker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@booker.id) %>
<%= link_to "Back", books_path %>